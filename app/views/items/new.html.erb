<%= stylesheet_link_tag "items_new", :media => "all" %>

<h3>新規アイテム</h3>
<%= form_for @item do |f| %>

  <h5>総合評価</h5>
  <div class="post_form">
    <%= f.radio_button :overall, 5 ,id: 'star1'%>
    <label for="star1"><span class="text">最高</span>★</label>

    <%= f.radio_button :overall, 4 ,id: 'star2'%>
    <label for="star2"><span class="text">良い</span>★</label>

    <%= f.radio_button :overall, 3 ,id: 'star3'%>
    <label for="star3"><span class="text">普通</span>★</label>

    <%= f.radio_button :overall, 2 ,id: 'star4'%>
    <label for="star4"><span class="text">悪い</span>★</label>

    <%= f.radio_button :overall, 1 ,id: 'star5'%>
    <label for="star5"><span class="text">最悪</span>★</label>
</div>

  <div class='form-group'>
  <h4>カテゴリーを指定する</h4>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
      <div class='form-check'>
          <%= tag.label class: 'form-check-label' do %>
              <%= tag.check_box class: 'form-check-input' %>
              <%= tag.text %>
          <% end %>
      </div>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :取引形態 %>
    <%= f.select :post_genre, 
    [["売る", "売る"], 
    ["貸す", "貸す"],
    ["譲る", "譲る"], 
    ["探す", "探す"]], include_blank: "選択して下さい" %>
  </div>

  <div class="field">
    <%= f.label :アイテムジャンル %>
    <%= f.select :item_genre, 
    [["テーブル", "テーブル"], 
    ["ソファ", "ソファ"],
    ["座椅子", "座椅子"],
    ["服", "服"],
    ["収納グッズ", "収納グッズ"],
    ["調理器具", "調理器具"],
    ["調味料", "調味料"],
    ["電気ケトル", "電気ケトル"],
    ["電子レンジ", "電子レンジ"], 
    ["トースター", "トースター"],
    ["炊飯器", "炊飯器"],
    ["冷蔵庫", "冷蔵庫"],
    ["洗濯機", "洗濯機"],
    ["教科書", "教科書"],
    ["その他", "その他"]], include_blank: "選択して下さい" %>
  </div>

  <div class="field">
    <%= f.label :アイテム画像 %>
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :値段 %>
    <%= f.number_field :price, :size => 10 %>
  </div>

  <div class="field">
    <%= f.label :状態 %>
    <%= f.select :status, 
    [["未使用", "未使用"], 
    ["良好", "良好"], 
    ["やや古い", "やや古い"],
    ["傷などが目立つ", "傷などが目立つ"]], include_blank: "選択して下さい" %>
  </div>

  <div class="field">
      <%= f.label :コメント %>
      <%= f.text_field :memo, :size => "80×30"%>
  </div>
  
  <div class="actions">
  <%= f.submit "アイテムを投稿する" , class: 'post-btn' %>
  </div>
<% end %>