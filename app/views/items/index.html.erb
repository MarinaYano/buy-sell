      </div>
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </a>
</div>


<h3>アイテム一覧</h3>

<% if user_signed_in? %>
<%= link_to "マイページへ", user_path(current_user.id) %>　　
<% end %>


<h3>投稿を検索</h3>

<%= form_tag({controller:"items",action:"index"}, method: :get) do %>
  <%= text_field_tag :search %>
  <%= submit_tag '検索する'  %>
<% end %>

<%= link_to "新規投稿へ", new_item_path %>

<br>
<%= page_entries_info @items %>

<%= form_tag({controller:"items",action:"index"}, method: :get) do %>
  <% @tags.each do |t| %>
      <li><%= check_box :tag_ids, t.name %><%= t.name %></li>
  <% end %>
  <%= submit_tag '検索' %>
<% end %>

<%= form_tag({controller:"items",action:"index"}, method: :get) do %>
  <%= text_field_tag :tag %>
  <%= submit_tag 'タグを追加' %>
<% end %>

<div class="items-container">
  <% @items.each do |t| %>
    <div class="item">
      <%= image_tag t.image_url, size: "250x200" if t.image? %>
      <%= t.user.email %>
      <%= t.post_genre %>
      <%= t.item_genre %>
      <%= t.price %>
      <%= t.status %>
      <%= t.memo %>
      <a href="/users/<%= t.user.id %>"><%= t.user.name %></a>

      <% if user_signed_in? %>
      <% if current_user.already_liked?(t) %>
          <%= link_to item_like_path(id: t.id, item_id: t.id), method: :delete do %>
            <i class="fas fa-heart"></i><%= t.likes.count %>
          <% end %>
      <% else %>
          <%= link_to item_likes_path(id: t.id, item_id: t.id), method: :post do %>
            <i class="far fa-heart"></i><%= t.likes.count %>
          <% end %>
      <% end %>
  <% else %>
    <i class="far fa-heart"></i><%= t.likes.count %>
  <% end %>

      <%= t.created_at %>
      <%= link_to "詳細へ", item_path(t.id) %>
      <% if user_signed_in? && current_user.id == t.user_id %>  
    　<%= link_to "編集する", edit_item_path(t.id) %>
    　<%= button_to "削除する", item_path(t.id), method: :delete %>
　　  <% end %>
      
    </div>
  <% end %>
</div>

<%= paginate @items %>